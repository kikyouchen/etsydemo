<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path , class: "btn btn-primary" %>
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <td>Name</td>
    <td>Description</td>
    <td>Price</td>
    <td>Action</td>
  </tr>

    <% @listings.each do |listing| %>
     <tr>
        <td> <%= link_to image_tag(listing.image.url(:medium)), listing %> </td>
        <td><%= link_to listing.name, listing %></td>
        <td><%= listing.description %></td>
        <td><%= number_to_currency(listing.price) %></td>
        <td>

          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link"  %></li>
              <li><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></li>
            </ul>
          </div>
          
          
       </td>
     </tr>
    <% end %>
  </table>



