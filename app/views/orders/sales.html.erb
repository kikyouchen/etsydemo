<div class = "center"> <h1>Your sale history</h1></div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <td>Item</td>
    <td>Price</td>
    <td>Customer</td>
    <td>Date sold</td>
  </tr>

    <% @orders.each do |order| %>
     <tr>
        <td> <%= link_to image_tag(order.listing.image.url(:medium)), order.listing %> </td>
        <td><%= link_to order.listing.name, order.listing %></td>        
        <td><%= number_to_currency(order.listing.price) %></td>
        <td><%= order.buyer.id %></td>        
        <td><%= order.created_at.strftime("%b, %-d, %Y") %></td>        
     </tr>
    <% end %>
  </table>

  <% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path , class: "btn btn-primary" %>
<% end %>



